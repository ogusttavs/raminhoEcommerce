<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary_dark | default: '#0d7c4a' }}">
    <link rel="canonical" href="{{ canonical_url }}">
    
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    <!-- Integração Fonts Premium (Google Fonts) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <!-- Design System (Cores Dinâmicas via Painel Admin) -->
    {% render 'css-variables' %}
    {{ 'design-system.css' | asset_url | stylesheet_tag }}
    {{ 'cart-drawer.css' | asset_url | stylesheet_tag }}
    {{ 'product-page.css' | asset_url | stylesheet_tag }}

    <!-- Global Utilities & Cart Logic -->
    <script src="{{ 'raminho-utils.js' | asset_url }}"></script>
    <script src="{{ 'smart-add-to-cart.js' | asset_url }}" defer="defer"></script>

    {{ content_for_header }}
    
    <!-- Integração Yampi Checkout Transparente -->
    {% render 'YampiSnippet' %}
  </head>

  <body>
    <!-- Header Premium Injetado -->
    {% section 'header' %}

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    <!-- Footer Premium Injetado -->
    {% section 'footer' %}
    
    <!-- Validação Carrinho (Pedido Mínimo) & Drawer -->
    {% render 'cart-validation' %}
    {% render 'cart-drawer' %}
  </body>
</html>
