<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_background }}">
    <link rel="canonical" href="{{ canonical_url }}">
    
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    <!-- Integração Fonts Premium (Google Fonts) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <!-- Design System (Cores Dinâmicas via Painel Admin) -->
    {% render 'css-variables' %}
    {{ 'design-system.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}
    
    <!-- Integração Yampi Checkout Transparente -->
    {% render 'YampiSnippet' %}
  </head>

  <body>
    <!-- Aqui entrará o section 'header' posteriormente -->
    <header class="site-header">
      <div class="container flex justify-between items-center" style="padding-top: 1rem; padding-bottom: 1rem;">
        <h1 class="font-heading text-primary" style="font-size: 1.5rem; margin: 0;">{{ shop.name }}</h1>
        <nav>
          <a href="/cart" class="text-dark" style="text-decoration: none;">Carrinho</a>
        </nav>
      </div>
    </header>

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    <!-- Aqui entrará o footer posteriormente -->
    
    <!-- Validação Carrinho (Pedido Mínimo) -->
    {% render 'cart-validation' %}
  </body>
</html>
