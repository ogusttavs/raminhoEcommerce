{{ 'product-card.css' | asset_url | stylesheet_tag }}

<style>
  /* Slider Horizontal Netflix Base */
  .netflix-slider-section {
    padding: 4rem 0 5rem 0;
    overflow: hidden; /* Prevent horizontal scrollbar on body */
  }

  .netflix-slider-header {
    margin-bottom: 2rem;
  }

  .netflix-slider-title {
    font-size: 2.2rem;
    color: var(--color-primary-dark);
  }

  .netflix-slider-description {
    color: var(--color-secondary);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  /* O container principal que tem overflow scroll */
  .netflix-track-container {
    width: 100%;
    /* Margin negativa para permitir o slider encostar na borda da tela no mobile */
    margin-right: calc(-50vw + 50%);
    padding-right: calc(50vw - 50%);
  }

  /* O trilho invisivel onde os cards deslizam */
  .netflix-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 1.5rem;
    padding-bottom: 2.5rem; /* Space for box-shadow hover */
    /* Hide scrollbar */
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }

  .netflix-track::-webkit-scrollbar {
    display: none; /* Chrome, Safari and Opera */
  }

  /* Os itens individuais (cards) */
  .netflix-slide {
    flex: 0 0 auto;
    width: 280px; /* Largura fixa para manter o controle */
    scroll-snap-align: start;
  }

  @media (min-width: 769px) {
    .netflix-slide {
      width: 320px; /* Pouco maior no desktop */
    }
  }

  /* Setas Navegação */
  .netflix-nav-btn {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #fff;
    border: 1px solid rgba(0,0,0,0.1);
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--color-primary-dark);
  }
  .netflix-nav-btn:hover {
    background: var(--color-primary);
    color: #fff;
    transform: scale(1.05);
  }
</style>

<section class="netflix-slider-section" style="background-color: var(--color-background);">
  <div class="container">
    
    <div class="netflix-slider-header" style="display: flex; justify-content: space-between; align-items: flex-end;">
      <div>
        <h2 class="netflix-slider-title font-heading">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p class="netflix-slider-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
      <!-- Arrows -->
      <div class="netflix-nav-arrows" style="display: flex; gap: 0.8rem; margin-bottom: 0.5rem;">
        <button class="netflix-nav-btn btn-prev" aria-label="Anterior" id="prev-{{ section.id }}">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button class="netflix-nav-btn btn-next" aria-label="Próximo" id="next-{{ section.id }}">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
        </button>
      </div>
    </div>

    <!-- Pista de Deslizamento -->
    <div class="netflix-track-container">
      <div class="netflix-track" id="track-{{ section.id }}">
        {% assign collection = collections[section.settings.collection] %}
        
        {% if collection != blank and collection.products_count > 0 %}
          {% for product in collection.products limit: section.settings.limit %}
            <div class="netflix-slide">
              {% render 'product-card-premium', product: product %}
            </div>
          {% endfor %}
        {% else %}
          <!-- Modo Placeholder para visualização -->
          {% for i in (1..6) %}
            <div class="netflix-slide">
              <div style="background:var(--color-background-alt); border-radius:8px; padding:2rem; text-align:center; height:450px; display:flex; align-items:center; justify-content:center; color:var(--color-secondary);">
                Produto Exemplo {{ i }}
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>

  </div>
</section>

<!-- Script Navegação -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const track = document.getElementById('track-{{ section.id }}');
    const btnPrev = document.getElementById('prev-{{ section.id }}');
    const btnNext = document.getElementById('next-{{ section.id }}');

    if(track && btnPrev && btnNext) {
      const scrollAmount = window.innerWidth > 768 ? 320 + 24 : 280 + 24; // width + gap
      
      btnNext.addEventListener('click', () => {
        track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });

      btnPrev.addEventListener('click', () => {
        track.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });
    }
  });
</script>

{% schema %}
{
  "name": "Carrossel Horizontal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da Seção",
      "default": "Frutas da Estação"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Descrição Curta",
      "default": "O frescor absoluto colhido hoje."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção para Exibir"
    },
    {
      "type": "range",
      "id": "limit",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Máximo de Produtos"
    }
  ],
  "presets": [
    {
      "name": "Carrossel Tipo Netflix"
    }
  ]
}
{% endschema %}
