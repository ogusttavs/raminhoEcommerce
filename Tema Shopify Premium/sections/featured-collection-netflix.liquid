{{ 'product-card.css' | asset_url | stylesheet_tag }}

<style>
  /* Slider Horizontal Apple Centered Base */
  .netflix-slider-section {
    padding: 4rem 0 5rem 0;
    overflow: hidden;
  }

  .netflix-slider-header {
    margin-bottom: 2rem;
    text-align: left;
  }

  .netflix-slider-title {
    font-size: 2.2rem;
    color: var(--color-primary-dark);
  }

  .netflix-slider-description {
    color: var(--color-secondary);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  .netflix-track-container {
    width: 100%;
    position: relative;
    padding-left: max(1.5rem, calc((100vw - 1440px) / 2 + 1.5rem));
  }

  .netflix-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 1.5rem;
    padding: 0 1.5rem 2.5rem 0;
    -ms-overflow-style: none;
    scrollbar-width: none;
    justify-content: flex-start;
  }

  .netflix-track::-webkit-scrollbar {
    display: none;
  }

  .netflix-slide {
    flex: 0 0 280px; 
    scroll-snap-align: start;
    transition: transform 0.3s ease;
  }

  @media (max-width: 768px) {
    .netflix-track-container {
      padding-left: 1rem;
    }
    .netflix-track {
      gap: 1rem;
      padding-right: 1.5rem;
    }
    .netflix-slide {
      flex: 0 0 240px;
      scroll-snap-align: center;
    }
  }

  /* Container Relativo para setas Absolutas */
  .netflix-carousel-wrapper {
    position: relative;
    width: 100%;
  }

  /* Setas Navegação - Estilo Hover */
  .netflix-nav-btn {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #fff;
    border: 1px solid rgba(0,0,0,0.1);
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: var(--color-primary-dark);
    position: absolute;
    z-index: 10;
    opacity: 0; /* Invisível por padrão */
    pointer-events: none;
  }

  .netflix-carousel-wrapper:hover .netflix-nav-btn {
    opacity: 1; /* Aparece no hover */
    pointer-events: auto;
  }

  .netflix-nav-btn:hover {
    background: var(--color-primary);
    color: #fff;
    transform: translateY(-50%) scale(1.1) !important;
  }

</style>

<section class="netflix-slider-section" style="background-color: var(--color-background);">
  <div class="container">
    <div class="netflix-slider-header" style="margin-bottom: 2rem;">
      <h2 class="netflix-slider-title font-heading h2">{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="netflix-slider-description" style="font-size: 1rem; opacity: 0.7; margin-top: 0.5rem;">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  </div>

  <!-- Pista de Deslizamento -->
  <div class="netflix-carousel-wrapper" style="position: relative;">
    <div class="container" style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); height: 100%; pointer-events: none; z-index: 10;">
      <!-- Arrows alinhadas com o conteúdo e centralizadas verticalmente -->
      <button class="netflix-nav-btn btn-prev" aria-label="Anterior" id="prev-{{ section.id }}" style="left: -22px; top: 50%; transform: translateY(-50%); pointer-events: auto;">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
      </button>
      <button class="netflix-nav-btn btn-next" aria-label="Próximo" id="next-{{ section.id }}" style="right: -22px; top: 50%; transform: translateY(-50%); pointer-events: auto;">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
      </button>
    </div>

    <div class="netflix-track-container">
      <div class="netflix-track" id="track-{{ section.id }}">
      {% assign collection = collections[section.settings.collection] %}
      
      {% if collection != blank and collection.products_count > 0 %}
        {% for product in collection.products limit: section.settings.limit %}
          <div class="netflix-slide">
            {% render 'product-card-premium', product: product %}
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..6) %}
          <div class="netflix-slide">
            <div class="product-card-premium" style="opacity: 0.8;">
              <div class="product-card-image-wrapper" style="background: #f0f0f0; display:flex; align-items:center; justify-content:center; height: 350px;">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
              </div>
              <div class="product-card-info" style="padding: 1.5rem;">
                 <h3 class="font-heading" style="font-size: 1.2rem; margin-bottom: 0.5rem;">Fruta Premium Exemplo {{ i }}</h3>
                 <p style="color: var(--color-primary); font-weight: 700;">R$ 29,99</p>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- Script Navegação -->
<script>
  (function() {
    const track = document.getElementById('track-{{ section.id }}');
    const btnPrev = document.getElementById('prev-{{ section.id }}');
    const btnNext = document.getElementById('next-{{ section.id }}');

    if(track && btnPrev && btnNext) {
      btnNext.addEventListener('click', () => {
        const slide = track.querySelector('.netflix-slide');
        const scrollAmount = slide ? slide.offsetWidth + 24 : 344;
        track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });

      btnPrev.addEventListener('click', () => {
        const slide = track.querySelector('.netflix-slide');
        const scrollAmount = slide ? slide.offsetWidth + 24 : 344;
        track.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });
    }
  })();
</script>

{% schema %}
{
  "name": "Carrossel Horizontal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da Seção",
      "default": "Frutas da Estação"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Descrição Curta",
      "default": "O frescor absoluto colhido hoje."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção para Exibir"
    },
    {
      "type": "range",
      "id": "limit",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Máximo de Produtos"
    }
  ],
  "presets": [
    {
      "name": "Carrossel Tipo Netflix"
    }
  ]
}
{% endschema %}
