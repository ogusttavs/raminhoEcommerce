<div class="container section-padding">
  <div class="collection-header text-center" style="margin-bottom: 4rem;">
    <h1 class="font-heading" style="font-size: 3rem; margin-bottom: 1.5rem;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description text-secondary" style="max-width: 600px; margin: 0 auto;">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>

  {% paginate collection.products by 12 %}
    {% if collection.products_count > 0 %}
      <div class="product-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 3rem;">
        {% for product in collection.products %}
          {% render 'product-card-premium', product: product %}
        {% endfor %}
      </div>
      
      {% if paginate.pages > 1 %}
        <div class="pagination text-center" style="margin-top: 5rem;">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
      
    {% else %}
      <div class="text-center" style="padding: 5rem 0;">
        <p style="font-size: 1.2rem; margin-bottom: 2rem;">Esta coleção ainda não tem produtos.</p>
        <a href="{{ routes.root_url }}" class="btn btn-primary">Ver outros produtos</a>
      </div>
    {% endif %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Listagem de Coleção",
  "settings": []
}
{% endschema %}
