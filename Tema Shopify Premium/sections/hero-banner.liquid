{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<section class="hero-premium">
  <div class="hero-image-wrapper">
    <!-- Overlay gradiente escuro na base para dar leitura extrema ao texto -->
    <div class="hero-overlay"></div>
    
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | image_url: width: 2000 }}"
           alt="{{ section.settings.title | escape }}"
           class="hero-img parallax-img"
           loading="eager"
           width="2000"
           height="auto">
    {% else %}
      <!-- Fallback Premium se não houver imagem -->
      <div class="hero-placeholder" style="background-color: var(--color-primary-dark); width: 100%; height: 100%;"></div>
    {% endif %}
  </div>

  <div class="hero-content container flex flex-col justify-end">
    <div class="hero-text-box">
      <h2 class="hero-title font-heading">{{ section.settings.title }}</h2>
      
      {% if section.settings.subtitle != blank %}
        <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.btn_link != blank and section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="btn btn--primary">
          {{ section.settings.btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<script>
  // Parallax super sutil, nivel Apple, apenas na imagem de fundo do Hero
  document.addEventListener('DOMContentLoaded', () => {
    const heroImage = document.querySelector('.parallax-img');
    if (heroImage) {
      window.addEventListener('scroll', () => {
        const scrolled = window.scrollY;
        // Move background image slowly relative to scroll (subtle effect)
        heroImage.style.transform = `translateY(${scrolled * 0.15}px)`;
      }, { passive: true });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Premium Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagem de Fundo (Alta Resolução)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título Principal",
      "default": "A excelência da fazenda, entregue com maestria."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Selecionamos artesanalmente o que há de melhor no mundo há mais de 40 anos."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Texto do Botão",
      "default": "Explorar Seleção"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Link do Botão",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Premium Banner"
    }
  ]
}
{% endschema %}
