<div class="container section-padding">
  <div class="search-header text-center" style="margin-bottom: 4rem;">
    <h1 class="font-heading" style="font-size: 3rem; margin-bottom: 1.5rem;">Resultados para "{{ search.terms }}"</h1>
    <p class="text-secondary">{{ search.results_count }} resultados encontrados</p>
  </div>

  {% if search.performed %}
    {% if search.results_count > 0 %}
      <div class="product-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 3rem;">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            {% render 'product-card-premium', product: item %}
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center" style="padding: 5rem 0;">
        <p style="font-size: 1.2rem; margin-bottom: 2rem;">Ops! NÃ£o encontramos nada para essa busca.</p>
        <a href="{{ routes.root_url }}" class="btn btn-primary">Voltar para a Home</a>
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Busca Superior",
  "settings": []
}
{% endschema %}
