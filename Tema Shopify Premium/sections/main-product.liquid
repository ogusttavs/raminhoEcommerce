  "name": "Página de Produto",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "title",
      "name": "Título",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Preço",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "Seletor de Variantes",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "Botão de Compra",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Descrição do Produto",
      "limit": 1
    },
    {
      "type": "trust_badge",
      "name": "Selo de Garantia",
      "limit": 1
    }
  ],
  "settings": []
}
{% endschema %}
