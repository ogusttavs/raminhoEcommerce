{%- assign umaunidade = false -%}
    {%- assign duasunidades = false -%}
    {%- assign tresunidades = false -%}
    
    {%- assign opcao = -1 -%}
	
    {%- for option in product.options -%}
    	{% assign opcao = opcao | plus: 1 %}
    	{%- if option == 'Quantidade' -%}
    		{%- break -%}
    	{%- endif -%}
    {%- endfor -%}

    {% for variant in product.variants %}
    	
    	{%- if umaunidade == false or duasunidades == false or tresunidades == false -%}
    
            {%- if variant.options[opcao] == '1 unidade' and umaunidade != true -%}
    
    			{%- assign preco1_min = variant.price -%}
               
                {%- assign preco1_puro_min = variant.price | divided_by: 100.00 -%}
    
    			{%- assign preco1_puro_max = variant.compare_at_price | divided_by: 100.00 -%}
    
    			{%- assign preco1_max = variant.compare_at_price -%}
    			
    			{%- assign umaunidade = true -%}

            {%- elsif variant.options[opcao] == '2 unidades' and duasunidades != true -%}
    
    			{%- assign preco2_puro_min = variant.price | divided_by: 100.00 -%}
    
    			{%- assign preco2_puro_max = variant.compare_at_price | divided_by: 100.00 -%}
    
    			{%- assign preco2_max = variant.compare_at_price -%}
    
    			{%- assign preco2_min = variant.price -%}
    
    			{%- assign duasunidades = true -%}

            {%- elsif variant.options[opcao] == '3 unidades' and tresunidades != true -%}
    
    			{%- assign preco3_puro_min = variant.price | divided_by: 100.00 -%}
    
    			{%- assign preco3_puro_max = variant.compare_at_price | divided_by: 100.00 -%}
    
    			{%- assign preco3_max = variant.compare_at_price -%}
    
    			{%- assign preco3_min = variant.price -%}
    
    			{%- assign tresunidades = true -%}

            {%- endif -%}
    
    	{%- else -%}
    	
    		{%- break -%}
    	
    	{%- endif -%}
    
    {% endfor %}
    
 
