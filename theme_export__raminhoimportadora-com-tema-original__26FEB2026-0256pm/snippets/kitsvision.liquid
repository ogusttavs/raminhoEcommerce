      <script>

        $(document).ready(function(){
          $("#1_unidade").attr('class', 'active');
          $("#bola1").attr('style', 'background-color: var(--kit_cor_bolinha);box-shadow: 0 0 0 2px var(--kit_cor_bolinha);');
          $( "input[value='1 unidade']" ).click();
        });

        function alterarVariante(variante){
          $( "input[value='"+variante+"']" ).click();

          if(variante == "1 unidade"){

            $("#1_unidade").attr('class', 'active');
            $("#2_unidades").attr('class', 'inactive');
            $("#3_unidades").attr('class', 'inactive');

            $("#bola1").attr('style', 'background-color: var(--kit_cor_bolinha);box-shadow: 0 0 0 2px var(--kit_cor_bolinha)');
            $("#bola2").attr('style', '');
            $("#bola3").attr('style', '');

          } else if(variante == "2 unidades") {

            $("#1_unidade").attr('class', 'inactive');
            $("#2_unidades").attr('class', 'active');
            $("#3_unidades").attr('class', 'inactive');

            $("#bola1").attr('style', '');
            $("#bola2").attr('style', 'background-color: var(--kit_cor_bolinha);box-shadow: 0 0 0 2px var(--kit_cor_bolinha)');
            $("#bola3").attr('style', '');

          } else {

            $("#1_unidade").attr('class', 'inactive');
            $("#2_unidades").attr('class', 'inactive');
            $("#3_unidades").attr('class', 'active');

            $("#bola1").attr('style', '');
            $("#bola2").attr('style', '');
            $("#bola3").attr('style', 'background-color: var(--kit_cor_bolinha);box-shadow: 0 0 0 2px var(--kit_cor_bolinha)');

          }
        }
      </script>

