      "default": "small"
    },
    {
      "type": "checkbox",
      "id": "enable_image_zoom",
      "label": "Habilitar zoom na imagem",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Habilitar lopping no vídeo",
      "default": false
    },
    {
      "type": "select",
      "id": "zoom_effect",
      "label": "Efeito do zoom",
      "options": [
        {
          "value": "inside",
          "label": "Entrando"
        },
        {
          "value": "outside",
          "label": "Saindo"
        }
      ],
      "default": "outside"
    },
    {
      "type": "select",
      "id": "carousel_effect",
      "label": "Efeito de transição",
      "options": [
        {
          "value": "fade",
          "label": "Desaparecer"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ],
      "default": "fade"
    }
  ],
  "presets": [
    {
      "category": "Product",
      "name": "Produto em destaque",
      "blocks": [
        {
          "type": "product_meta",
          "settings": {}
        },
        {
          "type": "featured_description",
          "settings": {}
        },
        {
          "type": "variant_selector",
          "settings": {}
        },
        {
          "type": "buy_buttons",
          "settings": {}
